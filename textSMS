<body>
  <p>Opening your text appâ€¦</p>
  <p>If nothing happens, please open your Messages app and try again.</p>

  <script>
    function getParam(name) {
      const url = new URL(window.location.href);
      return url.searchParams.get(name) || "";
    }

    const to = getParam("to");
    const body = getParam("body");

    // Detect iOS-ish
    const ua = navigator.userAgent || "";
    const isIOS = /iPhone|iPad|iPod/i.test(ua);

    const encodedBody = encodeURIComponent(body);

    // iOS is usually `sms:NUMBER&body=...`
    // Others are often `sms:NUMBER?body=...`
    let smsUrl;
    if (isIOS) {
      smsUrl = `sms:${to}&body=${encodedBody}`;
    } else {
      smsUrl = `sms:${to}?body=${encodedBody}`;
    }

    // Trigger SMS
    window.location.href = smsUrl;
  </script>
</body>
